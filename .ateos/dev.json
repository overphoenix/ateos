{
  "tasks": {
    "fork": {
      "tags": ["src", "info", "share"]
    }
  },
  "defaultTask": "copy",
  "nonWatchableTasks": [
    "cmake"
  ],
  "units": {
    "tasks": {
      "units": {
        "src": {
          "description": "Reslm tasks codebase",
          "src": "src/tasks/**/*.js",
          "dst": "lib/tasks",
          "task": "transpile"
        },
        "assets": {
          "description": "Realm tasks assets",
          "src": [
            "src/tasks/**/*",
            "!src/tasks/**/*.js"
          ],
          "dst": "lib/tasks"
        }
      }
    },
    "app": {
      "units": {
        "bin": {
          "description": "Ateos CLI executable",
          "src": "src/app/ateos.js",
          "dst": "bin",
          "task": "transpile"
        },
        "lib": {
          "description": "Ateos CLI codebase",
          "src": "src/app/**/*.js",
          "dst": "lib/app",
          "task": "transpile"
        },
        "assets": {
          "description": "Ateos CLI assets",
          "task": "copy",
          "src": [
            "src/app/**/*",
            "!src/app/**/*.js"
          ],
          "dst": "lib/app"
        }
      }
    },
    "common": {
      "description": "Common codebase",
      "src": "src/*.ts",
      "dst": "lib",
      "task": "tsc"
    },
    "glosses": {
      "units": {
        "jssrc": {
          "description": "Glosses JavaScript codebase",
          "src": "src/glosses/**/*.js",
          "dst": "lib/glosses",
          "task": "transpile"
        },
        "tssrc": {
          "description": "Glosses TypeScript codebase",
          "src": [
            "src/glosses/**/*.ts",
            "!src/glosses/**/*.d.ts"
          ],
          "dst": "lib/glosses",
          "task": "tsc"
        },
        "assets": {
          "description": "Assets",
          "task": "copy",
          "src": [
            "src/glosses/**/*",
            "!src/glosses/**/*.js",
            "!src/glosses/**/*.ts",
            "!src/glosses/**/*.d.ts"
          ],
          "dst": "lib/glosses"
        }
      }
    },
    "shani": {
      "units": {
        "jssrc": {
          "description": "Shani (test runner) JavaScript codebase",
          "src": "src/shani/**/*.js",
          "dst": "lib/shani",
          "task": "transpile"
        },
        "tssrc": {
          "description": "Shani (test runner) TypeScript codebase",
          "src": [
            "src/shani/**/*.ts",
            "!src/shani/**/*.d.ts"
          ],
          "dst": "lib/shani",
          "task": "tsc"
        },
        "assets": {
          "description": "Shani (test runner) assets",
          "task": "copy",
          "src": [
            "src/shani/**/*",
            "!src/shani/**/*.js",
            "!src/shani/**/*.ts",
            "!src/shani/**/*.d.ts"
          ],
          "dst": "lib/shani"
        }
      }
    },
    "native": {
      "description": "Everything to build Node.js addons",
      "src": "src/native/**/*",
      "dst": "lib/native"
    }
  }
}