{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": false,
    "target": "es2021",
    "lib": ["es2021"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "incremental": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmitOnError": false,
    "strict": true,
    "newLine": "LF",
    "noImplicitReturns": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "bin",
    "node_modules",
    "lib",
    "share",
    "tasks",
    "tests"
  ]
}